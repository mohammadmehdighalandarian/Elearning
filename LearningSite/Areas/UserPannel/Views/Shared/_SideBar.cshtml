@using LearningWeb_Core.Convertors
@using LearningWeb_Core.DTOs.UserPanel
@using LearningWeb_Core.Services

@inject IUserServices _UserService

@{
    SideBarUserPanelViewModel user = _UserService.sideBarInfo(User.Identity.Name);
}

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="/UserPannel/Editpic" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="~/UserAvatar/@user.ImageName">
            </div>
            <div class="detail">
                <span> @user.UserName </span>
                <span> عضویت : @user.RegisterDate.To_Shamsi() </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a href="/UserPannel"> مشاهده حساب کابری </a></li>
                    <li><a href="/UserPannel/Edit"> ویرایش حساب کابری </a></li>
                    <li><a href="/UserPannel/ChangePassword"> تغییر رمز عبور </a></li>
                    <li><a href="/UserPannel/Wallet"> کیف پول شما </a></li>
                    <li><a href="/UserPanel/MyOrders"> فاکتور ها </a></li>
                    <li><a href=""> تنظیمات حساب کاربری </a></li>
                    <li><a href="/Logout"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </section>
    </aside>
</div>