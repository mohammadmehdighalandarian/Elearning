@model LearningWeb_Core.DTOs.UserPanel.EditPictureUser
@{
    ViewData["Title"] = "ویرایش عکس پروفایل";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">E_learn</a></li>
            <li class="breadcrumb-item active" aria-current="page"> ویرایش عکس پروفایل </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">

                <partial name="_SideBar" />

                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1> ویرایش عکس پروفایل </h1>
                        </header>

                        <div class="inner form-layer">
                            <form asp-action="EditPic" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="AvatarName" />
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <p class="help-block">
                                        آواتار
                                    </p>
                                    <input type="file" asp-for="UserAvatar" /> 
                                    <p>لطفا فقط تصویر انتخاب کنید</p>
                                    <img class="thumbnail" src="/UserAvatar/@Model.AvatarName" style="max-width: 150px"/>
                                </div>

                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <button class="btn btn-success"> ویرایش اطلاعات </button>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

