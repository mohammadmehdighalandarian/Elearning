@page
@model LearningSite.Pages.Admin.ManageUser.Roles.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نقش های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterUserName" class="form-control" placeholder="نام نقش" />
                                </div>

                                <div class="col-sm-2 col-md-2">
                                    <button type="submit" class="btn btn-info">بگرد</button>
                                    <a class="btn btn-default btn-sm" href="/Admin/manageuser/Role/index">خالی</a>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateRole" class="btn btn-outline btn-success">افزودن نقش جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام نقش</th>
                                    <th>وضعیت</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Role in Model.Roles)
                                {
                                    <tr>
                                        <td>@Role.RoleName</td>
                                        
                                        <td>
                                            @if (!Role.IsDeleted)
                                            {
                                                <p class="text-success">فعال</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">غیر فعال</p>
                                            }
                                        </td>
                                        <td>
                                            <a asp-route-id=@Role.Id asp-page="EditRole" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>

                                            <a href="/Admin/ManageUser/Roles/DeleteRole/@Role.Id" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>